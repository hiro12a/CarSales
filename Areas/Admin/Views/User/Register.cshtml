@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="container pb-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="py-2 text-white">Register</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col-md-12">
                    <form class="row" method="post">
                        <div asp-validation-summary="ModelOnly" clas s="text-danger" role="alert"></div>
                        <div class="form-floating mb-3 col-12">
                            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label class="ms-2 text-muted" asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label class="ms-2 text-muted" asp-for="Name">Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="StreetAddress" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label class="ms-2 text-muted" asp-for="StreetAddress">Street Address</label>
                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="PhoneNumber" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label class="ms-2 text-muted" asp-for="PhoneNumber">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label class="ms-2 text-muted" asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label class="ms-2 text-muted" asp-for="ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="City" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label class="ms-2 text-muted" asp-for="City">City</label>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="State" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label class="ms-2 text-muted" asp-for="State">State</label>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3 col-6">
                            <input asp-for="PostalCode" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label class="ms-2 text-muted" asp-for="PostalCode">Postal Code</label>
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        @if(User.IsInRole(SD.Role_Admin))
                        {
                            <div class="form-floating mb-3 col-md-6">
                                <select asp-for="Role" asp-items="@Model.RoleList" class="form-select">
                                    <option disabled selected>-Select Role-</option>
                                </select>
                            </div>
                            <div class="form-floating mb-3 col-md-6">
                                <select asp-for="CompanyId" style="display:none;" asp-items="@Model.CompanyList" class="form-select">
                                    <option disabled selected>-Select Company-</option>
                                </select>
                            </div>
                        }
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!--This script allows us to be able to choose a
    company if the user selects that their role is a compnay role-->
    <script>
        $(document).ready(function () {
            $('#Role').change(function () {
                var selection = $('#Role Option:Selected').text();
                if (selection == 'Company') {
                    $('#CompanyId').show();
                }
                else {
                    $('#CompanyId').hide();
                }
            })
        })
    </script>
}