@model LoginVM

@{
    ViewData["Title"] = "Log in";
}
<div class="container pb-4">
    <div class="card shadow border-0 mt-4">
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <section>
                        <form method="post">
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Email" class="form-label">Email</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                <label asp-for="Password" class="form-label">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="checkbox mb-3">
                                    <label asp-for="RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                                <a href="@Url.Action("Register","User", new {Area = "Admin"})">Register</a>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                            </div>
                            <!--D-Flex makes them all in a single line-->
                            <!--Justify content adds spacing in between them-->
                            <div class="pt-4 border-0 justify-content-between d-flex">
                                <p>
                                    <a href="@Url.Action("DemoCustomer","User", new { Area = "Admin"})">Demo Customer User</a>
                                </p>
                                <p>
                                    <a href="@Url.Action("DemoCompany","User", new { Area = "Admin"})">Demo Company User</a>
                                </p>
                                <p>
                                    <a href="@Url.Action("DemoAdmin", "User", new { Area = "Admin" })">Demo Admin</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}