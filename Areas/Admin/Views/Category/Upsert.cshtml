@model Category

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient my-4">
        <div class="row">
            <div class="col-12 text-center">
                <!--Check if there is an existing id-->
                <!--If no existing id, it means that it neeeds to be created-->
                <h2 class="text-white py-2">@(Model.Id !=0?"Update":"Create") Car Types</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form method="post" class="row">
            <!--Allows us to check if theres an existing id-->
            <input asp-for="Id" hidden />
            <div class="row">
                <!--Take up 12 columns-->
                <div class="col-12">
                    <div class="border p-3">
                        <!--Form floating enable labels with text form fields in the Bootstrap 5 version-->
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                            <label asp-for="DisplayOrder" class="ms-2"></label>
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>
                    <!--For the buttons to submit-->
                    <div class="row pt-2">
                        <!--Submit Button-->
                        <!--The col md 2 sizes it-->
                        <div class="col-6 col-md-3">
                            <!--Check if its to create or update-->
                            @if(Model.Id != 0) // If there is an existing id
                            {
                                // Update
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                // Create
                                <button type="submit" class="btn btn-primary form-control">Create</button>
                            }
                        </div>
                        <!--Back Button-->
                        <!--The col md 2 sizes it-->
                        <div class="col-6 col-md-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">
                                Back To List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!--Scripts Section-->
@section scripts{
    <!--For validation-->
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}